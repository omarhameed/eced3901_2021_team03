<launch>

	<!-- Arguments -->

	<arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

	<arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>

	<arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>

	<arg name="open_rviz" default="true"/>

	<arg name="node_delay_first" default="15.0" /> 
	<arg name="node_delay_second" default="170.0" /> 



	<!-- TurtleBot3 -->

	<include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">

		<arg name="model" value="$(arg model)" />

	
    </include>  

	<!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->

	<include file="$(find turtlebot3_slam)/launch/turtlebot3_$(arg slam_methods).launch">

		<arg name="model" value="$(arg model)"/>

		<arg name="configuration_basename" value="$(arg configuration_basename)"/>

	</include>



	<!-- rviz -->

	<group if="$(arg open_rviz)"> 

		<node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find turtlebot3_slam)/rviz/turtlebot3_$(arg slam_methods).rviz"/>

	</group>

    <arg name = "x"/>
	<node name="eced3901_dt2" pkg="eced3901_2021_team03" type="eced3901_dt2.py" args="$(arg x)" launch-prefix="bash -c 'sleep $(arg node_delay_first); $0 $@' " output="screen"/>
	<node name="my_map" pkg="map_server" type="map_saver" args=" -f $(find eced3901_2021_team03)/maps/Design_Task2_map" launch-prefix="bash -c 'sleep $(arg node_delay_second); $0 $@' " output="screen"/>

</launch>

